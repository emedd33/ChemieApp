<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff719" />
            <gradient android:angle="-90" android:startColor="#fff719" android:endColor="#e5de19"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/yellow_HC" />
            <solid android:color="#fff719"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#fff719" />
            <gradient android:angle="-90" android:endColor="#e2e034" android:startColor="#edcd2f" />
        </shape>
    </item>
</selector>