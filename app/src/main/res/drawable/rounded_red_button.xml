<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#cc0000" />
            <gradient android:angle="-90" android:startColor="#e60000" android:endColor="#b30000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#cc0000" />
            <solid android:color="#cc0000"/>
        </shape>
    </item>

    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#cc0000" />
            <gradient android:angle="-90" android:endColor="#e60000" android:startColor="#b30000" />
        </shape>
    </item>
</selector>